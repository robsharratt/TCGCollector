@model TCGCollector.Models.Card

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CardID" />
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardImageURL" class="control-label"></label>
                <input asp-for="CardImageURL" class="form-control" />
                <span asp-validation-for="CardImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardImageHiURL" class="control-label"></label>
                <input asp-for="CardImageHiURL" class="form-control" />
                <span asp-validation-for="CardImageHiURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardCatID" class="control-label"></label>
                <select asp-for="CardCatID" class="form-control" asp-items="ViewBag.CardCatID"></select>
                <span asp-validation-for="CardCatID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardTypeID" class="control-label"></label>
                <select asp-for="CardTypeID" class="form-control" asp-items="ViewBag.CardTypeID"></select>
                <span asp-validation-for="CardTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetID" class="control-label"></label>
                <select asp-for="SetID" class="form-control" asp-items="ViewBag.SetID"></select>
                <span asp-validation-for="SetID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNum" class="control-label"></label>
                <input asp-for="CardNum" class="form-control" />
                <span asp-validation-for="CardNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardRarityID" class="control-label"></label>
                <select asp-for="CardRarityID" class="form-control" asp-items="ViewBag.CardRarityID"></select>
                <span asp-validation-for="CardRarityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdateDate" class="control-label"></label>
                <input asp-for="LastUpdateDate" class="form-control" />
                <span asp-validation-for="LastUpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
